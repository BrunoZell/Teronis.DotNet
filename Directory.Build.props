<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- TODO: Conditional imports (here) or explicit import in other projects -->
  <Import Project="$(MSBuildThisFileDirectory)\.msbuild-projects\Directory.Core.props" />
  <Import Project="$(MSBuildThisFileDirectory)\src\Packaging\ProjectBuildInPackage\src\build\Teronis.Packaging.ProjectBuildInPackage.props" />

  <PropertyGroup>
    <DisableGitVersionTaskAutoInstall>false</DisableGitVersionTaskAutoInstall>
    <ProjectBuildInPackageVerbosity>detailed</ProjectBuildInPackageVerbosity>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>$(MSBuildProjectName)</AssemblyName>
    <Platforms>AnyCPU;x64;x86</Platforms>
    <DebugSymbols>true</DebugSymbols>
	  <DebugType>portable</DebugType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Teroneko</Authors>
	  <Company>$(MSBuildProjectName)</Company>
    <Product>$(MSBuildProjectName)</Product>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <RepositoryUrl>https://github.com/teroneko/Teronis.DotNet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Copyright>Teroneko</Copyright>
    <PackageIcon>icon.png</PackageIcon>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <NeutralLanguage>en</NeutralLanguage>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb;.props;.targets</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>
  
  <PropertyGroup Condition="$(MSBuildProjectName.EndsWith('.Localization'))">
    <Description>Contains localization resources for assembly $(MSBuildProjectName.Replace('.Localization','')).</Description>
    <!-- https://docs.microsoft.com/de-de/dotnet/core/tools/csproj#ispackable -->
	  <IsPackable>False</IsPackable>
  </PropertyGroup>

  <PropertyGroup Condition="$(MSBuildProjectName.EndsWith('.Test'))">
    <Description>Contains test cases for assembly $(MSBuildProjectName.Replace('.Test','').</Description>
    <!-- https://docs.microsoft.com/de-de/dotnet/core/tools/csproj#ispackable -->
	  <IsPackable>False</IsPackable>
  </PropertyGroup>
  
  <PropertyGroup>
    <!-- GitVersionTask: NuGet does support SemVer 2.0 -->
    <UseFullSemVerForNuGet>true</UseFullSemVerForNuGet>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
	
    <None Include="$(MSBuildThisFileDirectory)\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
  
</Project>