<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <DotNetGitVersionCacheProjectPath>$(MSBuildThisFileDirectory)..\..\GitVersionCache\src\Teronis.DotNet.GitVersionCache.csproj</DotNetGitVersionCacheProjectPath>
    <DotNetGitVersionCacheProjectPath>$([System.IO.Path]::GetFullPath('$(DotNetGitVersionCacheProjectPath)'))</DotNetGitVersionCacheProjectPath>
  </PropertyGroup>

  <Target Name="OnBeforeBuild" BeforeTargets="BeforeBuild">
    <MSBuild Projects="$(DotNetGitVersionCacheProjectPath)" Targets="Restore" Properties="Configuration=$(Configuration)" />
    <MSBuild Projects="$(DotNetGitVersionCacheProjectPath)" Targets="Publish" Properties="Configuration=$(Configuration);PublishProfile=GitVersionCachePreBuild.pubxml" />
  </Target>

</Project>
