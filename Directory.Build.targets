<Project>
    <PropertyGroup>
        <ImportPath Condition="'$(DisableProjectBuildInPackageProjectsImports)' != 'true'">$(MSBuildThisFileDirectory)\src\Packaging\ProjectBuildInPackage\src\build\Teronis.Packaging.ProjectBuildInPackage.targets</ImportPath>
    </PropertyGroup>

    <Target Name="CopyProjectReferencesToPackage" Condition="'$(ImportPath)' == ''"/>
    <Import Project="$(ImportPath)" Condition="'$(ImportPath)' != ''"/>

    <ItemGroup Condition="'$(DisableGitVersionTaskAutoInstall)' != 'true'">
        <PackageReference Include="GitVersionTask" Version="5.1.3">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>
</Project>